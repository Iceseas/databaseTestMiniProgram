page {
    background-image: linear-gradient(45deg, #8baaaa 0%, #ae8b9c 100%);
}

.finalGrade_body {
    width: 100%;
}

.badage_head {
    background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    position: fixed;
    top: 15%;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0rpx 0rpx 20rpx #878787;
}

.badage_head::after {
    position: absolute;
    content: '';
    width: 146rpx;
    height: 146rpx;
    background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
    border-radius: 20rpx;
    top: 114rpx;
    left: 28rpx;
    transform: rotate(45deg);
    box-shadow: 20rpx 20rpx 20rpx #878787;
}

.badage_cicrle {
    position: absolute;
    top: 75%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140rpx;
    height: 140rpx;
    background: #fddb6bfd;
    z-index: 2;
    border-radius: 100%;
    box-shadow: 0rpx 0rpx 30rpx #fda085;
}

.badage_star {
    top: 25%;
    left: 25%;
    background: #ff4d4d;
    border-radius: 10rpx;
    width: 70rpx;
    height: 70rpx;
    position: relative;
    text-align: center;
    transform: rotate(20deg);
}

.badage_star:before {
    border-radius: 10rpx;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 70rpx;
    width: 70rpx;
    background: #ff4d4d;
    transform: rotate(135deg);
}

.badage_rectangle {
    background: #ff4d4d;
    width: 40rpx;
    height: 70rpx;
    position: absolute;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.badage_rectangle:nth-of-type(1) {
    left: 12%;
}

.badage_rectangle:nth-of-type(2) {
    left: 41%;
}

.badage_rectangle:nth-of-type(3) {
    left: 69%;
}

.finalGrade_show {
    display: block;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    font-size: 36rpx;
}

.share_box {
    position: fixed;
    bottom: 5%;
    height: 120rpx;
    width: 80%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 20rpx;
    display: flex;
}

.share_box_item {
    flex-grow: 1;
    position: relative;
}

.cut_off_line {
    width: 2rpx;
    height: 40rpx;
    margin-top: 40rpx;
    display: inline-block;
    background: #8e99cc;
}

.share_box_item_rectangle {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    border-radius: 20rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    box-shadow: 0rpx 0rpx 20rpx #878787;
}

.sharewechat {
    background: #07c160;
}

.shareQQ {
    background: #409EFF;
}

.sharePYQ {
    background: #00d7a6;
}

.share_box_icon_init {
    font-size: 50rpx;
}

.goback {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    position: relative;
    background: #fff;
    box-shadow: 0rpx 0rpx 20rpx #878787;
    top: 55%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.goback_icon_init {
    font-size: 32rpx;
    color: #fff;
}

.goback_icon_background {
    position: absolute;
    text-align: center;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(15, 15, 15, 0.3);
    border-radius: 100%;
}